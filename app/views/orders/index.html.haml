- if @orders.any?
  %table.simple-list
    %thead
      %tr
        %th Дата создания
        %th Дата обновления
        %th Платформа
        %th Сумма займа
        - unless current_user.is_client?
          %th Сумма договора
          %th Сумма банка
          %th Сумма агента
        %th Статус
        - unless current_user.is_client?
          %th Ссылка для клиента
        %th Edit
    %tbody
      - @orders.each do |order|
        %tr{class:"#{'in-mfo' if order.status == "Отправлено в МФО"}"}
          %td.date
            = order.created_at.to_formatted_s(:long)
          %td.date
            = order.updated_at.to_formatted_s(:long)
          %td
            = order.platform
          %td
            = order.summa
          - unless current_user.is_client?
            %td
              = order.dogovor_summa
            %td
              = order.mfo_summa
            %td
              = order.agent_summa
          %td
            = order.status
          - unless current_user.is_client?
            %td
              = "#{request.host}#{orders_path}/#{order.id.to_s}/edit?#{order.editkey}"
          %td.edit
            - if order.status != "Отправлено в МФО"
              = link_to "Изменить", edit_order_path(order)
- else
  %h4 Нет заявок на заполнении

%script
  window.tarifs =
  =raw @tarifs.to_json