%table.simple-list
  %thead
    %tr
      %th Дата создания
      %th Дата обновления
      %th Сумма
      %th Сумма\Ставка договора
      %th Сумма\Ставка банка
      %th Сумма\Ставка агента
      %th Платформа
      %th Статус
      %th Edit
  %tbody
    - @orders.each do |order|
      %tr
        %td.date
          = order.created_at.to_formatted_s(:long)
        %td.date
          = order.updated_at.to_formatted_s(:long)
        %td
          = order.summa
        %td
          = order.order_summa
        %td
          = order.mfo_summa
        %td
          = order.agent_summa
        %td
          = Platform.find_by_number(order.platform).name
        %td
          = order.status
        %td.edit
          = link_to "Изменить", edit_order_path(order)